{
  "name": "jamber3",
  "version": "1.0.1",
  "description": "Automated guitar song library with tablature discovery",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "debug": "set NODE_ENV=development && electron .",
    "debug-server": "set NODE_ENV=development && node server.js",
    "server": "node server.js",
    "rebuild": "electron-rebuild",
    "build": "electron-builder",
    "dist": "npm run rebuild && npm run build"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "better-sqlite3": "^11.10.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "howler": "^2.2.4",
    "music-metadata": "^11.7.3",
    "pitch-shift": "^0.0.0",
    "soundtouchjs": "^0.2.1",
    "tone": "^15.1.22"
  },
  "devDependencies": {
    "buffer-crc32": "^1.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "png-to-ico": "^2.1.8",
    "rcedit": "^4.0.1"
  },
  "keywords": [
    "guitar",
    "tablature",
    "music",
    "library",
    "automated"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.jamber3.app",
    "productName": "Jamber3",
    "directories": {
      "output": "build-output"
    },
    "asar": false,
    "files": [
      "index.html",
      "help.html",
      "styles.css",
      "help-styles.css",
      "window-state.json",
      "electron-main.js",
      "server.js",
      "libs/**/*",
      "icons/**/*",
      "database-service.js",
      "config-manager.js",
      "file-logger.js",
      "error-logger.js",
      "global-error-handler.js",
      "input-field-utils.js",
      "confirmation-modal.js",
      "progress-indicator.js",
      "song-explorer.js",
      "song-details.js",
      "resource-review.js",
      "audio-player.js",
      "jamber3-app.js",
      "metadata-extractor.js",
      "mp3-scanner.js",
      "resource-finder.js",
      "migrations/**/*",
      "sqlite-schema.sql",
      "default-config.json",
      "!**/*.log",
      "!dist/**/*",
      "!**/*.db",
      "!**/*.db-shm",
      "!**/*.db-wal",
      "!ultra-simple.html",
      "!simple.html",
      "!preload.js"
    ],
    "extraResources": [
      {
        "from": "icons",
        "to": "icons",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icons/icon.ico",
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false,
      "signAndEditExecutable": false
    },
    "mac": {
      "target": "dmg",
      "icon": "icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icons/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "installerIcon": "icons/icon.ico",
      "uninstallerIcon": "icons/icon.ico",
      "installerHeaderIcon": "icons/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Jamber3",
      "license": "LICENSE.txt"
    }
  }
}
